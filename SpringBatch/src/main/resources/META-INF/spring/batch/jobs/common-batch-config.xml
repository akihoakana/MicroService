<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:batch="http://www.springframework.org/schema/batch"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/batch
		http://www.springframework.org/schema/batch/spring-batch-2.2.xsd
		http://www.springframework.org/schema/beans
		http://www.springframework.org/schema/beans/spring-beans-3.2.xsd">

    <batch:job id="mailJob" >
        <batch:step id="stepMailToDB">
            <batch:tasklet>
                <batch:chunk reader="readerDBtoCSV" writer="writerMailtoDB" processor="ProcessorSendMail"
                             commit-interval="1">
                </batch:chunk>
            </batch:tasklet>
        </batch:step>
    </batch:job>

    <bean id="ProcessorSendMail" class="com.example.SpringBatch.service.process.ProcessorSendMail" scope="step"/>
